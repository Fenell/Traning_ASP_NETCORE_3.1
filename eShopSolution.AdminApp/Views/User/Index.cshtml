@using eShopSolution.ViewModels.Common
@model PagedResult<UserViewModel>

@{
	ViewData["Title"] = "Danh sách người dùng";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Danh sách người dùng</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
						<li class="breadcrumb-item active">Danh sách người dùng</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>


	<div class="mb-5 row">
		<div class="col-md-6"><a asp-action="Create" class="btn btn-success">Tạo mới</a></div>
		<div class="mt-4 col-md-6">
			<form asp-action="Index" , method="get">
				<div class="row">
					<div class="col-8"><input type="text" , class="form-control" , name="keyword", value="@ViewBag.keyword" /></div>
					<div class="col-4">
						<button type="submit" class="btn btn-danger" asp-action="Index">Tìm</button>
						<button type="button" class="btn btn-secondary" onclick="window.location.href='/User/Index'">Reset</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Tên
				</th>
				<th>
					Họ
				</th>
				<th>
					Số điện thoại
				</th>
				<th>
					Tên tài khoản
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.FirstName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.LastName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.PhoneNumber)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UserName)
					</td>
					<td>
						@Html.ActionLink("Edit", "Update", new{id = item.Id}) |
						@Html.ActionLink("Details", "Detail", new { id=item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
					</td>
				</tr>
			}
		</tbody>
	</table>
	@await  Component.InvokeAsync("Pager", Model)
</div>




